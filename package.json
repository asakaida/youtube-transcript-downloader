{
  "name": "youtube-transcript-downloader",
  "version": "1.0.0",
  "description": "A CLI tool to download YouTube video transcripts",
  "license": "MIT",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "youtube-transcript-downloader": "./dist/youtube-transcript-downloader"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/youtube-transcript-downloader",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/youtube-transcript-downloader-linux-x64",
    "build:linux-arm64": "bun build src/index.ts --compile --target=bun-linux-arm64 --outfile dist/youtube-transcript-downloader-linux-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/youtube-transcript-downloader-darwin-x64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/youtube-transcript-downloader-darwin-arm64",
    "build:windows-x64": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/youtube-transcript-downloader-windows-x64.exe",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:windows-x64",
    "test": "bun test",
    "test:unit": "bun test src/",
    "test:integration": "bun test tests/integration/",
    "test:e2e": "bun test tests/e2e/",
    "test:ci": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --write src/ tests/",
    "format": "biome format --write src/ tests/"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^2.3.11",
    "typescript": "^5.9.3"
  }
}
